<div class="container-fluid">

  <br><br><br><br>
  <div class="row">
    <div class="col-12 text-center">
      <h1>Eat Dem Burgers!</h1>
    </div>
  </div>
  <br><br><br><br>

  <div class="row">
    <div class="col-6 justify-content-center">
      <h2>Tasty burgers you haven't eaten</h2>
      <div class="list-group">
        <ul>
          {{#each burgers}}
          {{#unless this.devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>

    <div class="col-6 text-center">
      <h2>Burgers you've devoured whole!</h2>
      <div class="list-group">
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <br><br><br><br>

  <div class="row">
    <div class="col-12 text-center">
      <h2>Add a burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burg">Burger Name:</label>
          <input type="text" id="burg" burger_name="burger_name">
        </div>

        {{!-- in case you want to initially create it as devoured --}}
        <div class="form-group">
          <label for="devour">Have you already devoured it?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>

        <button id="create-button" type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>